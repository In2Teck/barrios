					  <input id="tags" />
					</div>
				<div class="corre-neon">CORRE</div>
				<div style="padding-bottom:20%;"> </div>
				
			</div>

			
		</div>

  <script type="text/javascript">
$( "#neon-1" ).click(function() {
  $('html, body').animate({
  scrollTop: $("#barrio2").offset().top
  }, 1000);

 });

$( "#neon-2" ).click(function() {
  $('html, body').animate({
  scrollTop: $("#barrio3").offset().top
  }, 1000);

 });


$( "#neon-up-1" ).click(function() {
  $('html, body').animate({
  scrollTop: $("#barrio1").offset().top
  }, 1000);

 });


$( "#neon-up-2" ).click(function() {
  $('html, body').animate({
  scrollTop: $("#barrio2").offset().top
  }, 1000);

 });



  </script>


